{
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/notify.ps1"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "end_turn",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/notify.ps1 -DefaultMessage \"Response completed.\""
          }
        ]
      }
    ]
  }
}